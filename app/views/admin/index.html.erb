<h1>All users</h1>
<table class="table">

    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Admin</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        <% @users.each do |user| %>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? %></td>
        <td><%= user.admin? %></td>
        <td><%= link_to "CHANGE ROL", user_path(user), method: :patch, class: "btn btn-info btn-sm" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Main Site", root_path %>